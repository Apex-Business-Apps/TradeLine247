# TradeLine 24/7 Environment Configuration

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=   # from GitHub/CI secrets at runtime

# Email (Resend)
RESEND_API_KEY=              # from secrets

# App base URL
BASE_URL=https://www.tradeline247ai.com

# Twilio (voice/SMS webhooks)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=           # from secrets

# Twilio security
ALLOW_INSECURE_TWILIO_WEBHOOKS=false
NODE_ENV=production

# Feature flags (all features default OFF unless explicitly enabled)
FEATURE_RCS=1
FEATURE_WHATSAPP=0
FEATURE_VOICE_AI=0

# Splash v2 (Magic Heart) - New 2.0s animated splash screen
# Default: OFF (disabled) until fully tested
# Set to "true" to enable the new splash experience
VITE_SPLASH_V2_ENABLED=false

# Splash v2 Force Show - Debug/demo override
# Default: OFF
# Set to "true" to always show splash (ignores "once per version" persistence)
# Useful for testing and demos
VITE_SPLASH_V2_FORCE_SHOW=false

# Splash v2 Sound - Optional chime sound
# Default: ON (true)
# Set to "false" to disable the subtle chime sound
# Respects user's accessibility settings and silent mode
VITE_SPLASH_V2_SOUND_ENABLED=true

# App Version (for splash persistence tracking)
# This should be synced with package.json version
VITE_APP_VERSION=1.0.1

