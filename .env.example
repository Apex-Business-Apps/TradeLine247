# TradeLine 24/7 Environment Configuration
# Production runtime: Supabase Edge + tradeline247ai.com

# Supabase Configuration
SUPABASE_URL=https://hysvqdwmhxnblxfqnszn.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here

# Application Base URL
BASE_URL=https://www.tradeline247ai.com

# Twilio Configuration (for voice/SMS webhooks)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Twilio Security
# CRITICAL: ALLOW_INSECURE_TWILIO_WEBHOOKS must NEVER be true in production
# CI/CD will block deployment if set to true with NODE_ENV=production
# Only use in local development for testing without valid Twilio signatures
ALLOW_INSECURE_TWILIO_WEBHOOKS=false

# Optional: Twilio IP Allowlist (Defense-in-Depth)
# Comma-separated IP prefixes from Twilio's webhook IPs
# Example: TWILIO_IP_ALLOWLIST=54.172.,54.244.,54.171.
# Leave empty to disable IP filtering
TWILIO_IP_ALLOWLIST=

# Environment
NODE_ENV=production

# Optional: Analytics
ANALYTICS_WRITE_KEY=your_analytics_key_here
