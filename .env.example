# TradeLine 24/7 Environment Configuration

# Supabase (server-only secrets must never reach the client)
SUPABASE_URL=<your-supabase-project-url>
SUPABASE_SERVICE_ROLE_KEY=<service-role-key -- server only>
SUPABASE_ANON_KEY=<optional anon key for server-side helpers>

# Email (Resend)
RESEND_API_KEY=              # from secrets

# App base URL
BASE_URL=https://www.tradeline247ai.com

# Twilio (voice/SMS webhooks)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=           # from secrets

# Twilio security
ALLOW_INSECURE_TWILIO_WEBHOOKS=false
NODE_ENV=production

# Feature flags (all features default OFF unless explicitly enabled)
FEATURE_RCS=1
FEATURE_WHATSAPP=0
FEATURE_VOICE_AI=0

# Optional: Analytics
ANALYTICS_WRITE_KEY=

# Supabase client configuration (safe for browser exposure)
VITE_SUPABASE_URL=<your-supabase-project-url>
VITE_SUPABASE_ANON_KEY=<your-supabase-anon-or-publishable-key>
VITE_SUPABASE_PROJECT_ID=<your-supabase-project-id>
